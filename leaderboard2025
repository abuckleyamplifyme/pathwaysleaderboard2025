<body>
  <div class="app">
    <aside class="sidebar">
      <div class="sidebar-section">
        <h2>Simulation type</h2>
        <div class="button-list" id="simButtons">
          <button class="toggle-btn" data-sim="Markets">Markets</button>
          <button class="toggle-btn" data-sim="Banking">Banking</button>
          <button class="toggle-btn" data-sim="Quant">Quant</button>
        </div>
      </div>

      <div class="sidebar-section">
        <h2>Level</h2>
        <div class="button-list" id="levelButtons">
          <button class="toggle-btn" data-level="1">Level 1</button>
          <button class="toggle-btn" data-level="2">Level 2</button>
          <button class="toggle-btn" data-level="3">Level 3</button>
        </div>
      </div>
    </aside>

    <main class="main">
      <header class="header">
        <h1 class="title" id="leaderboardTitle">
          Markets leaderboard  Level 1
        </h1>
        <p class="subtitle">
          Top 10 performers ranked from 1 to 10. Name, university and nationality
          in black, white and red.
        </p>
      </header>

      <section class="leaderboard-wrapper">
        <table>
          <thead>
            <tr>
              <th>Rank</th>
              <th>Name</th>
              <th>University</th>
              <th>Nationality</th>
            </tr>
          </thead>
          <tbody id="leaderboardBody">
            <!-- Rows injected by JavaScript -->
          </tbody>
        </table>
        <div class="footer-note" id="footerNote">
          Showing simulated data for Markets Level 1. Replace with live data
          when ready.
        </div>
      </section>
    </main>
  </div>

  <script>
    // Dummy leaderboard data  replace with real data from your backend if needed
    const leaderboardData = {
      Markets: {
        1: Array.from({ length: 10 }, (_, i) => ({
          rank: i + 1,
          name: `Markets L1 Student ${i + 1}`,
          uni: "City University of Hong Kong",
          nationality: "Hong Kong",
        })),
        2: Array.from({ length: 10 }, (_, i) => ({
          rank: i + 1,
          name: `Markets L2 Student ${i + 1}`,
          uni: "UCL",
          nationality: "United Kingdom",
        })),
        3: Array.from({ length: 10 }, (_, i) => ({
          rank: i + 1,
          name: `Markets L3 Student ${i + 1}`,
          uni: "National University of Singapore",
          nationality: "Singapore",
        })),
      },
      Banking: {
        1: Array.from({ length: 10 }, (_, i) => ({
          rank: i + 1,
          name: `Banking L1 Student ${i + 1}`,
          uni: "Imperial College London",
          nationality: "United Kingdom",
        })),
        2: Array.from({ length: 10 }, (_, i) => ({
          rank: i + 1,
          name: `Banking L2 Student ${i + 1}`,
          uni: "HKUST",
          nationality: "Hong Kong",
        })),
        3: Array.from({ length: 10 }, (_, i) => ({
          rank: i + 1,
          name: `Banking L3 Student ${i + 1}`,
          uni: "University of Oxford",
          nationality: "Ireland",
        })),
      },
      Quant: {
        1: Array.from({ length: 10 }, (_, i) => ({
          rank: i + 1,
          name: `Quant L1 Student ${i + 1}`,
          uni: "MIT",
          nationality: "United States",
        })),
        2: Array.from({ length: 10 }, (_, i) => ({
          rank: i + 1,
          name: `Quant L2 Student ${i + 1}`,
          uni: "ETH Zurich",
          nationality: "Switzerland",
        })),
        3: Array.from({ length: 10 }, (_, i) => ({
          rank: i + 1,
          name: `Quant L3 Student ${i + 1}`,
          uni: "University of Cambridge",
          nationality: "United Kingdom",
        })),
      },
    };

    let currentSim = "Markets";
    let currentLevel = 1;

    const simButtons = document.querySelectorAll("#simButtons .toggle-btn");
    const levelButtons = document.querySelectorAll("#levelButtons .toggle-btn");
    const titleEl = document.getElementById("leaderboardTitle");
    const bodyEl = document.getElementById("leaderboardBody");
    const footerEl = document.getElementById("footerNote");

    function renderLeaderboard() {
      const entries = leaderboardData[currentSim][currentLevel];

      // Update title
      titleEl.textContent = `${currentSim} leaderboard  Level ${currentLevel}`;

      // Update table body
      bodyEl.innerHTML = "";
      entries.forEach((entry) => {
        const tr = document.createElement("tr");

        const rankTd = document.createElement("td");
        rankTd.textContent = entry.rank;
        rankTd.className = "rank-cell";

        const nameTd = document.createElement("td");
        nameTd.textContent = entry.name;

        const uniTd = document.createElement("td");
        uniTd.textContent = entry.uni;

        const natTd = document.createElement("td");
        natTd.textContent = entry.nationality;

        tr.appendChild(rankTd);
        tr.appendChild(nameTd);
        tr.appendChild(uniTd);
        tr.appendChild(natTd);

        bodyEl.appendChild(tr);
      });

      // Update footer note
      footerEl.textContent =
        "Showing simulated data for " +
        currentSim +
        " Level " +
        currentLevel +
        ". Replace with live data when ready.";

      // Update active button states
      simButtons.forEach((btn) => {
        btn.classList.toggle(
          "active-sim",
          btn.getAttribute("data-sim") === currentSim
        );
      });

      levelButtons.forEach((btn) => {
        btn.classList.toggle(
          "active-level",
          Number(btn.getAttribute("data-level")) === currentLevel
        );
      });
    }

    // Add event listeners
    simButtons.forEach((btn) => {
      btn.addEventListener("click", () => {
        currentSim = btn.getAttribute("data-sim");
        renderLeaderboard();
      });
    });

    levelButtons.forEach((btn) => {
      btn.addEventListener("click", () => {
        currentLevel = Number(btn.getAttribute("data-level"));
        renderLeaderboard();
      });
    });

    // Initial render
    renderLeaderboard();
  </script>
</body>
</html>
